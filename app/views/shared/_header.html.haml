%section#top-header.row
  %h1.span2
    = link_to "MyFLiX", root_path 
  - if current_user
    %ul.span4.clearfix
      %li= link_to "Videos", videos_path
      %li= link_to "My Queue", queue_path
      %li= link_to "People", people_path
      %li= link_to "Admin", admin_payments_path
    = form_tag search_videos_path, class: "span5 for-search" do
      %input.search-query(name="term" type="text" placeholder="Search for videos here")
      %button.btn(type="submit") Search
    #user_links.pull-right
      %ul
        %li.dropdown
          %a(href="#" id="dlabel" role="button" data-toggle="dropdown" class="dropdown-toggle" data-target="#")
            Welcome, #{current_user.full_name}
            %b.caret
          %ul.dropdown-menu(role="menu" aria-labelledby="dlabel")
            %li
              = link_to 'Invite a friend', invite_path
              %a(href="#") Account
              %a(href="#") Plan and Billing
              = link_to "Sign Out", logout_path
