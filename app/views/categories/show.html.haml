%section.genre
  %header.clearfix
    %h1= @category.title
    .genre_sorting
      Sort by:
      %select(name="")
        %option(value="a-z") Title: A - Z
        %option(value="z-a") Title: Z - A
        %option(value="rating") Rating
  %article.row
    - @category.videos.each do |video|
      .video.span2
        = link_to image_tag(video.small_cover_url, alt: video.title, title: video.title) , video
